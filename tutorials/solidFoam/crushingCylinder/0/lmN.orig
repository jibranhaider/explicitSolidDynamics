FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      lmN;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../constant/runParameters"
#include "../constant/mechanicalProperties"

dimensions      [1 -2 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    fixed
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    free
    {
        type            zeroGradient;
    }

    symmetric
    {
        type            zeroGradient;
    }

    loading
    {
        type            movingDisplacementNodalLinearMomentum;
        density         $rho;
        displacement    $uMax;
        endTime         $tEnd;
        value           uniform (0 0 0);
    }
}

